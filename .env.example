# OneWeather Environment Variables
# Copy to .env and update values

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/oneweather
POSTGRES_PASSWORD=password
POSTGRES_DB=oneweather
POSTGRES_USER=postgres

# Redis
REDIS_URL=redis://localhost:6379/0

# Storage
STORAGE_PATH=./data
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_S3_BUCKET=oneweather-data
AWS_REGION=us-east-1

# API
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
ENVIRONMENT=development
LOG_LEVEL=INFO
SECRET_KEY=change-this-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# External Services
NOAA_NOMADS_BASE_URL=https://nomads.ncep.noaa.gov/pub/data/nccf/com/gfs/prod
METAR_BASE_URL=https://aviationweather.gov/api/data

# Ingestion Settings
GFS_RESOLUTION=0p25
GFS_FORECAST_HOURS=0,1,3,6,12,24,48
GFS_CYCLES=00,06,12,18
DATA_RETENTION_DAYS=14

# Monitoring
PROMETHEUS_METRICS_PORT=8001
GRAFANA_ADMIN_PASSWORD=admin

# Development
DEBUG=true
RELOAD=true